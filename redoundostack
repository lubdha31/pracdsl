class TextEditor:
    def __init__(self):
        self.document = ""
        self.undo_stack = []
        self.redo_stack = []

    def make_change(self, text):
        self.undo_stack.append(self.document)
        self.document += text
        self.redo_stack.clear()

    def undo(self):
        if self.undo_stack:
            self.redo_stack.append(self.document)
            self.document = self.undo_stack.pop()
        else:
            print("Nothing to undo.")

    def redo(self):
        if self.redo_stack:
            self.undo_stack.append(self.document)
            self.document = self.redo_stack.pop()
        else:
            print("Nothing to redo.")

    def display(self):
        print("Current Document State:", self.document)


editor = TextEditor()

editor.make_change("Hello")
editor.make_change(" World")
editor.display()

editor.undo()
editor.display()

editor.redo()
editor.display()

editor.make_change("!!!")
editor.display()

editor.undo()
editor.display()
